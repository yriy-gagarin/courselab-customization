		</method>
		<method name="Display" label="ПОКАЗАТЬ" access="public">
			<params>
				<param name="elindex" label="Номер элемента"/>
			</params>
			<body>
			<![CDATA[function Display(argobj)
			{
				var oCurObj = CLO[argobj.pid];
				if(oCurObj==null || oCurObj.div==null) return false;
				var jCurObjDiv = $(oCurObj.div);
				var iIndex = 1;
				if(argobj.elindex!=null)
				{
					iIndex = parseInt(argobj.elindex, 10);
					if(isNaN(iIndex)) return false;
				}
				else
				{
					if(argobj.elem!=null)
					{
						if($(argobj.elem).hasClass("cl-header-btn-right"))
						{
							iIndex = oCurObj.data.iCurrent + 1;
						}
						else if($(argobj.elem).hasClass("cl-header-btn-left"))
						{
							iIndex = oCurObj.data.iCurrent - 1;
						}
					}
				}
				if(iIndex<1 || iIndex>oCurObj.data.iMax) return false;
				var aObjects = oCurObj.jxParams.find("objects > item");
				var sObjectId;
				var oObject;
				for(var i=1; i<=aObjects.length; i++)
				{
					if(i==iIndex)
					{
						sObjectId = $(aObjects[i-1]).children("objectid").text();
						oObject = CLO[sObjectId];
						if(oObject==null) continue;
						if(oObject.type!=null)
						{
							if(CL.oMethods[oObject.type]!=null)
							{
								if(CL.oMethods[oObject.type]["Open"]!=null)
								{
									oObject.CallMethod({ sMethod: "Open" });
								}
								else
								{
									oObject.Show();
								}
							}
							else
							{
								oObject.Show();
							}
						}
						else
						{
							oObject.Show();
						}
					}
					else
					{
						sObjectId = $(aObjects[i-1]).children("objectid").text();
						oObject = CLO[sObjectId];
						if(oObject==null) continue;
						if(oObject.type!=null)
						{
							if(CL.oMethods[oObject.type]!=null)
							{
								if(CL.oMethods[oObject.type]["Close"]!=null)
								{
									oObject.CallMethod({ sMethod: "Close" });
								}
								else
								{
									oObject.Hide();
								}
							}
							else
							{
								oObject.Hide();
							}
						}
						else
						{
							oObject.Hide();
						}
					}
				}
				oCurObj.FireEvent({ sName: "onDisplayItem" });
				if(iIndex==1 && oCurObj.data.iTotalElems>1)
				{
					oCurObj.FireEvent({ sName: "onDisplayFirstItem" });
				}
				else if(iIndex==oCurObj.data.iTotalElems && oCurObj.data.iTotalElems>1)
				{
					oCurObj.FireEvent({ sName: "onDisplayLastItem" });
				}
				var iIdx = $.inArray(iIndex, CLZ.oStore[argobj.pid]);
				if(iIdx==-1)
				{
					CLZ.oStore[argobj.pid].push(iIndex);
					if(CLZ.oStore[argobj.pid].length>=oCurObj.data.iTotalElems)
					{
						oCurObj.FireEvent({ sName: "onAllVisited" });
					}
				}
				else
				{
					CLZ.oStore[argobj.pid].splice(iIdx, 1);
					CLZ.oStore[argobj.pid].push(iIndex);
				}

				var sNarrationFile = $(oCurObj.jxParams.find("objects > item")[iIndex-1]).children("narration").text();
				if(sNarrationFile!="")
				{
					CL.Sound.Play({ sId: argobj.pid + "_" + argobj.iLevel, sEvent: "narration", sType: "custom", sFile: sNarrationFile });
				}
				else
				{
					CL.Sound.Stop({ sId: argobj.pid, sEvent: "narration" });
				}
				oCurObj.data.iCurrent = iIndex;
				oCurObj.CallMethod({ sMethod: "UpdateButtons" });
				return true;
			}]]>
			</body>
		</method>
		<method name="GetProperty" label="_GetProperty" access="private">
			<params>
			</params>
			<body>
			<![CDATA[function GetProperty(argobj)
			{
				var oCurObj = CLO[argobj.pid];
				if(oCurObj.div==null) return false;
				switch(argobj.property.toLowerCase())
				{
					case "allvisited":
					{
						return (CLZ.oStore[argobj.pid].length>=oCurObj.data.iTotalElems ? 1 : 0);
					}
					case "item":
					{
						return oCurObj.data.iCurrent;
					}
				}
				return true;
			}]]>
			</body>
		</method>
    </methods>
